/**
 * Implements hook_requirements().
 */
function spatial_kmz_requirements($phase) {
  $requirements = array();
  $t = get_t();

  // Check that php zip library is installed
  if (class_exists('ZipArchive')) {
    $requirements['spatial_kmz_php_zip'] = array(
      'title' => $t('PHP zip extension'),
      'value' => $t('The PHP zip extension is loaded.'),
      'severity' => REQUIREMENT_OK,
    );
  }
  else {
    $requirements['spatial_kmz_php_zip'] = array(
      'title' => $t('PHP zip extension'),
      'value' => $t('The PHP zip extension was not found. No data can be extracted from KMZ files.'),
      'severity' => REQUIREMENT_ERROR,
    );
  }

  return $requirements;
}

/**
 * Open a stream to a KMZ file.
 */
function spatial_kmz_open($uri) {
  module_load_include('inc', 'spatial_kmz', 'spatial_kmz.class');
  if ($kmz = new SpatialKMZ($uri)) {
    return $kmz;
  }
}

function spatial_kmz_get_wkt($uri) {
  if ($kmz = spatial_kmz_open($uri)) {
    if ($spatial_features = $kmz->process()) {
      return $spatial_features;
    }
  }

  return NULL;
}
