/**
 * Context handler callback.
 */
function hr_core_og_context_handler($node = NULL) {
  $context = NULL;
  if ($node == NULL) {
    $nid = arg(1);
    if (is_numeric($nid)) {
      $node = node_load($nid);
      if ($node) {
        $context = og_context_handler_node($node);
      }
    }
  }
  return $context;
}

