  if (isset($schema['field_revision_field_geofield'])) {
    $schema['field_revision_field_geofield']['fields']['field_geofield_geom']['type'] = 'blob';
    $schema['field_revision_field_geofield']['fields']['field_geofield_geom']['size'] = 'big';
  }

  // User name length 254.
  if (isset($schema['users'])) {
    $schema['users']['fields']['name']['length'] = 254;
  }
}

/**
 * Prepare the node add form for clones.
 */
function hr_core_prepare_node_clone_form(&$form, &$form_state) {
  if (!isset($form['clone_from_original_nid'])) {
    return;
  }

  // Keep original language.
  $node_lang = $form['#node']->language;
  $field_lang = $form['title_field']['#language'];

  if ($node_lang !== $field_lang) {
    $form_state['values']['language'] = $node_lang;

    foreach (['body', 'title_field'] as $field_name) {
      $form[$field_name]['#language'] = $node_lang;

      $form[$field_name][$node_lang] = $form[$field_name][$field_lang];
      unset($form[$field_name][$field_lang]);

      $form[$field_name][$node_lang][0]['#language'] = $node_lang;
      $form[$field_name][$node_lang][0]['value']['#language'] = $node_lang;
      $form[$field_name][$node_lang][0]['value']['#name'] = 'title_field[' . $node_lang . '][0][value]';
      $form[$field_name][$node_lang][0]['value']['#default_value'] = $form['title']['#default_value'];
      $form[$field_name][$node_lang]['#language'] = $node_lang;

      $form_state['field'][$field_name][$node_lang] = $form_state['field'][$field_name][$field_lang];
      unset($form_state['field'][$field_name][$field_lang]);
    }

    // Mark title as cloned.
    $form[$field_name][$node_lang][0]['value']['#default_value'] .= ' [CLONED]';
  }

  // Add title validation.
  if (!isset($form['#validate'])) {
    $form['#validate'] = array();
  }
  $form['#validate'][] = '_hr_core_check_clone_title';
}

/**
 * Make sure title is changed in cloned node.
 */
function _hr_core_check_clone_title($form, &$form_state) {
  if (isset($form_state['values']['title_field'][$form_state['node']->language][0]['value'])) {
    if (strpos($form_state['values']['title_field'][$form_state['node']->language][0]['value'], '[CLONED]') !== FALSE) {
      $types = node_type_get_types();
      form_set_error('title_field', t('Please adjust the title before saving this @name', array('@name' => $types[$form_state['node']->type]->name)));
    }
  }
}

/**
 * Implements hook_google_tag_insert_alter().
 *
 * Add datalayer dimensions for google tag manager.
 * The hook is for checking whether to insert the tracking code or not.
 */
function hr_core_google_tag_insert_alter($satisfied) {
  // Don't add datalayer if google_analytics module is still providing it.
  // @todo can be removed after deployment.
  if (!module_exists('google_tag')) {
    return;
  }

  if ($satisfied === FALSE) {
    return $satisfied;
  }

  // User information.
  global $user;
  $datalayer = array(
    'dimension12' => token_replace('[current-user:roles]', array(
      'current-user' => $user,
    )),
  );

  // Get the entity for the current path.
  if ($node = menu_get_object()) {
    $replacement = array('node' => $node);
    $dimensions = array(
      'dimension1' => '[node:content-type]',
      'dimension2' => '[node:field_document_type]',
      'dimension3' => '[node:language]',
      'dimension4' => '[node:og-group-ref]',
      'dimension5' => '[node:field_bundles]',
      'dimension6' => '[node:field_locations]',
      'dimension7' => '[node:field-organizations]',
      'dimension8' => '[node:field_themes]',
      'dimension9' => '[node:field_disasters]',
      'dimension10' => '[node:field-infographic-type]',
      'dimension11' => '[node:og-context--node:title]',
      'dimension13' => '[node:created:custom:Y-m-d]',
      'dimension18' => '[node:field-event_category]',
      'dimension19' => '[node:field-coordination-hubs]',
      'dimension20' => '[node:group_access]',
    );
    if ($node->type === 'hr_operation') {
      $dimensions['dimension4'] = '[node:title]';
    }

    // Force tokens to use English.
    global $language;
    $current_language = $language;
    $language = language_list()['en'];

    // Rebuild content types to get English name.
    _node_types_build(TRUE);

    $options = array(
      'clear' => TRUE,
      'language' => language_list()['en'],
      'langcode' => 'en',
    );

    foreach ($dimensions as $key => $dimension) {
      $dimension = token_replace($dimension, $replacement, $options);
      if ($dimension !== '') {
        $datalayer[$key] = $dimension;
      }
    }

    // Switch back to current language.
    $language = $current_language;
  }

  // Sort the dimensions.
  ksort($datalayer, SORT_NATURAL);

  // Add the datalayer javascript.
  $datalayer_json = drupal_json_encode($datalayer);
  if (!empty($datalayer_json)) {
    $data_layer_name = variable_get('google_tag_data_layer', 'dataLayer');
    drupal_add_js($data_layer_name . ' = [' . $datalayer_json . '];', array(
      'type' => 'inline',
      'group' => JS_LIBRARY,
      'weight' => -20,
      'requires_jquery' => FALSE,
    ));
  }

  return $satisfied;
}

