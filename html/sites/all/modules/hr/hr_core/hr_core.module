/**
 * Process the panels add content modal.
 *
 * This is run here so that preprocess can make changes before links are
 * actually rendered.
 */
function hr_core_preprocess_panels_add_content_modal(&$vars) {
  global $user;

  // List of allowed categories.
  $allowed_categories = [
    'assessments',
    'custom-content',
    'funding',
    'hr-info-content',
    'reliefweb-content',
  ];

  // Move panes.
  if (isset($vars['categories']['custom-content']['content']['Node body'])) {
    $vars['categories']['outdated']['content']['Node body'] = $vars['categories']['custom-content']['content']['Node body'];
    unset($vars['categories']['custom-content']['content']['Node body']);
  }

  if (isset($vars['categories']['reliefweb-content']['content']['Response Planning/OCHA products'])) {
    $vars['categories']['outdated']['content']['Response Planning/OCHA products'] = $vars['categories']['reliefweb-content']['content']['Response Planning/OCHA products'];
    unset($vars['categories']['reliefweb-content']['content']['Response Planning/OCHA products']);
  }

  if (isset($vars['categories']['reliefweb-content']['content']['Static Reports and Maps'])) {
    $vars['categories']['outdated']['content']['Static Reports and Maps'] = $vars['categories']['reliefweb-content']['content']['Static Reports and Maps'];
    unset($vars['categories']['reliefweb-content']['content']['Static Reports and Maps']);
  }

  if (isset($vars['categories']['--v--nements']['content']['{Évènements} - Evénements à venir'])) {
    $vars['categories']['hr-info-content']['content']['{Évènements} - Evénements à venir'] = $vars['categories']['--v--nements']['content']['{Évènements} - Evénements à venir'];
    unset($vars['categories']['--v--nements']['content']['{Évènements} - Evénements à venir']);
    unset($vars['categories']['--v--nements']);
  }

  // Translate titles.
  foreach ($vars['categories'] as &$category) {
    $category['title'] = t($category['title']);
    foreach ($category['content'] as &$content) {
      $content['title'] = t($content['title']);
    }
  }

  // Remove outdated for non-administrators.
  if (is_array($user->roles) && !in_array('administrator', array_values($user->roles))) {
    $counter = 0;
    foreach ($vars['categories'] as $key => $category_info) {
      if (!in_array($key, $allowed_categories)) {
        unset($vars['categories'][$key]);
        unset($vars['categories_array'][$counter]);
      }

      $counter++;
    }
  }
}

/**
 * Implements hook_boot().
 */
function hr_core_boot() {
  if (!extension_loaded('newrelic')) {
