function hr_datasets_block_view($delta = '') {
  $block = array();
  switch ($delta) {
    case 'hdx-datasets_search':
      drupal_add_library('chosen', 'drupal.chosen');
      $block['content'] = '<div><div class="views-exposed-form">
        <div class="views-exposed-widgets clearfix">
                <div id="edit-search-wrapper" class="views-exposed-widget form-group">
        <div class="input-group">
          <input class="form-control text-center" id="search" name="datasets.title" value="" maxlength="128" type="text" placeholder="Search Datasets by Title" style="width: 255px">
        </div>
        </div>
        </div>
      </div>  </div>';

      $block['content'] .= '<p class="text-center"><select id="hdx-tags-dropdown" data-placeholder="Search by Tags"><option value="_none"></option>';
      $hdx_tags = hr_datasets_hdx_results("https://data.hdx.rwlabs.org/api/3/action/tag_list");

      foreach ($hdx_tags as $key  => $value) {
        $block['content'] .= '<option value="'.$value.'">'.$value.'</option>';
      }
      $block['content'] .= '</select></p>';

      $block['content'] .= '<p class="text-center"><select id="hdx-organizations-dropdown" data-placeholder="Search by Organization"><option value="_none"></option>';

      $hdx_organizations = hr_datasets_hdx_results("https://data.hdx.rwlabs.org/api/3/action/organization_list");
      foreach ($hdx_organizations as $key => $value) {
        $block['content'] .= '<option value="'.$value.'">'.$value.'</option>';
      }
      $block['content'] .= '</select></p>';
    break;
    case 'hdx-datasets_filters':
      $block['content'] = '<div id="block-current-search-hr-current-search" class="block block-current-search">

    <h2>Current search</h2>
  
  <div class="content">
    <div class="current-search-item current-search-item-text current-search-item-results"><div class="current-search-filter">Filter: <span class="facetapi-active">216 items</span> displayed</div></div><div class="current-search-item current-search-item-text current-search-item-reset"><div class="current-reset-filter"><a href="/'.drupal_get_path_alias(current_path()).'"><i class="reset"></i></a> Reset all filters</div></div>  </div>
</div>';
break;
  }
  return $block;
}

/**
* Function to read from the HDX API and retreive results as required given a URL.
* @param $url - this is the HDX API URL.
* @return array
*/

function hr_datasets_hdx_results($url) {
  $request = drupal_http_request($url);
  if(!empty($request->data)) {
    $result = drupal_json_decode($request->data);
    return $result['result'];
  }
}